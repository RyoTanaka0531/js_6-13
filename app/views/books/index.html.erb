<main>
    <div class="notice">
        <p id="notice">
        <%= notice %>
        </p>
    </div>
        <h1 class="jquery">Books</h1>
        <table>
            <thead>
                <th>Title</th>
                <th>Body</th>
            </thead>
            <tbody>
            <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to 'Show',book_path(book.id) %> </td>
                <td><%= link_to 'Edit',edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
            <% end %>
            <tbody>
        </table>

        <div class="form">
        <h2>New book</h2>
        </p>
        <%= form_for(@book) do |f| %>
            <% if @book.errors.any? %>
                <div id="error_explanation" class="alert alert-danger">
                  <ul>
                    <% @book.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <div class="text">
            <p>Title</p>
            <%= f.text_field :title %>
            </div>
            <div class="text">
            <p>Body</p>
            <%= f.text_area :body %>
            </div>
            <p><%= f.submit 'Create Book' %></p>
            </div>
        <% end %>
        </div>
</main>